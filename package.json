{
  "name": "@resideo/zeus",
  "repository": "git@github.com:resideo/zeus.git",
  "private": true,
  "workspaces": {
    "packages": [
      "auth0-add-origin",
      "auth0-remove-origin",
      "twistlock",
      "core/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@resideo/typescript"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules/"
    ]
  },
  "scripts": {
    "build": "run-s build:core build:actions",
    "build:core": "yarn workspaces --scope=@resideo/action-core-* build",
    "build:actions": "yarn workspaces --ignore=@resideo/action-core-* build",
    "problems": "yarn workspaces problems",
    "lint": "eslint \"**/*.{js,ts}*\""
  },
  "devDependencies": {
    "@resideo/eslint-config-typescript": "^0.0.6",
    "@resideo/tsconfig": "^0.0.5",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "^7.27.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^4.4.3"
  },
  "resolutions": {
    "minimist": ">=1.2.2"
  },
  "volta": {
    "node": "12.22.0",
    "yarn": "1.22.11"
  }
}
